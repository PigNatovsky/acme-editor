#!/usr/bin/env sh

# if plumber is not started, start it.
if ! pgrep -x "plumber" > /dev/null
then
    plumber
    9pfuxe `namespace`/plumb /mnt/plumb
    cat $HOME/git/plan9/lib/plumbing $PLAN9/plumb/initial.plumbing | 9p write plumb/rules > /dev/null
fi

# if fontsrv is not started, start it.
if ! pgrep -x "fontsrv" > /dev/null
then
    fontsrv&
fi

ACMEFONT='/mnt/font/Inziu-Iosevka-CL-Regular/16a/font'
acme -a -f $ACMEFONT &