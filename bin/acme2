#!/usr/bin/env sh

VARIABLE_PITCH_FONT='/mnt/font/LucidaGrande/16a/font'
FIXED_PITCH_FONT='/mnt/font/TriplicateT4p/14a/font'

export PAGER=nobs
export MANPAGER=nobs
export prompt='$ '
export EDITOR=E
export TERM=dumb
export MANPAGER=nobs
export PAGER=nobs

export PLUMBFILE=$HOME/git/acme-editor/lib/plumbing
export SHELL=/usr/local/bin/bash
export acmeshell=/usr/local/bin/bash
export PLAN9=/usr/local/plan9
export PATH=$PATH:$PLAN9/bin
export MANPATH=$MANPATH:$PLAN9/man

# [ -z "$(pgrep fontsrv)" ] && fontsrv&
[ -z "$(pgrep plumber)" ] && plumber;

if [ -f "$PLUMBFILE" ]; then
	cat "$PLUMBFILE" | 9p write plumb/rules
else
	cat $PLAN9/plumb/basic | 9p write plumb/rules
fi

[ -z "$(pgrep acme)" ] && acme -a -m /mnt/acme -f "$VARIABLE_PITCH_FONT" -F "$FIXED_PITCH_FONT" &

